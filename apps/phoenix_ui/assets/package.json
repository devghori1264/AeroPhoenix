{
  "name": "phoenix_ui_assets",
  "private": true,
  "version": "1.0.0",
  "description": "AeroPhoenix UI assets bundle",
  "scripts": {
    "build": "esbuild js/app.js --bundle --target=es2017 --outdir=../priv/static/assets --minify",
    "watch": "esbuild js/app.js --bundle --target=es2017 --outdir=../priv/static/assets --watch",
    "deploy": "NODE_ENV=production yarn build",
    "tailwind:build": "./node_modules/.bin/tailwindcss -i ./css/app.css -o ../priv/static/assets/app.css --minify",
    "tailwind:watch": "./node_modules/.bin/tailwindcss -i ./css/app.css -o ../priv/static/assets/app.css --watch"
  },
  "dependencies": {
    "d3": "^7.9.0",
    "esbuild": "^0.24.0",
    "topojson-client": "^3.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.15"
  }
}
